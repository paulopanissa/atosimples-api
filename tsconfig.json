{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,

		"noLib": false,
		"noImplicitAny": false,
		"typeRoots": ["node_modules/@types", "types"],
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"compileOnSave": false,
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts"
	]
}
